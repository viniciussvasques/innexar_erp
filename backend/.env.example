# Innexar ERP - Environment Variables
# Copy this to .env and fill with real values

# ===== DATABASE =====
MARIADB_ROOT_PASSWORD=innexar_root_2024
MYSQL_DATABASE=innexar_dev
MYSQL_USER=innexar
MYSQL_PASSWORD=innexar_pass_2024

# ===== FRAPPE =====
SITENAME=innexar.local
ADMIN_PASSWORD=admin123
DEVELOPER_MODE=1

# ===== STRIPE (Payment Gateway) =====
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_FREE_PRICE_ID=price_free_tier_id
STRIPE_PRO_PRICE_ID=price_pro_tier_id
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_tier_id

# ===== AVALARA (Sales Tax) =====
AVALARA_ACCOUNT_ID=your_account_id
AVALARA_LICENSE_KEY=your_license_key
AVALARA_ENVIRONMENT=sandbox
AVALARA_COMPANY_CODE=INNEXAR

# ===== PLAID (Banking) =====
PLAID_CLIENT_ID=your_client_id
PLAID_SECRET=your_secret_key
PLAID_ENVIRONMENT=sandbox

# ===== EMAIL =====
RESEND_API_KEY=re_your_api_key
RESEND_FROM_EMAIL=noreply@innexar.com
# OR use AWS SES
AWS_SES_ACCESS_KEY=your_access_key
AWS_SES_SECRET_KEY=your_secret_key
AWS_SES_REGION=us-east-1

# ===== OPENAI (AI Features) =====
OPENAI_API_KEY=sk-your_openai_key
OPENAI_MODEL=gpt-4-turbo-preview

# ===== AWS S3 (File Storage) =====
AWS_S3_BUCKET=innexar-storage
AWS_S3_ACCESS_KEY=your_access_key
AWS_S3_SECRET_KEY=your_secret_key
AWS_S3_REGION=us-east-1

# ===== MONITORING =====
SENTRY_DSN=https://your_sentry_dsn
GRAFANA_API_KEY=your_grafana_key

# ===== SECURITY =====
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
ENCRYPTION_KEY=your_encryption_key_32_chars

# ===== FEATURE FLAGS =====
ENABLE_AI_INSIGHTS=true
ENABLE_REMOTE_WORK_MODULE=true
ENABLE_ADVANCED_ANALYTICS=true
